<% if @user.errors.any?%>
  <h3>The following errors prevented an account from being created: </h3>
    <ul>
    <% @user.errors.full_messages.each do |msg|%>
      <li><%= msg %></li>
    <%end%>
    </ul>
<%end%>

  <h1 align="center">Sign up</h1>

<div class="row">
  <div class="col-xs-12">

    <%= form_for(@user, :html => {class: "form-horizontal", role: "form", method: "POST"}) do |f| %>
    
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%=f.label :name %>
      </div>
      <div class="col-sm-8">  
        <%=f.text_field :name, class: "form-control", placeholder: "Your Name", autofocus: true%>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-2">    
        <%=f.label :age%>
      </div>  
      <div class="col-sm-2"> 
       <%=f.number_field :age, class: "form-control" %>
      </div>
    </div>   

    <div class="form-group">
      <div class="control-label col-sm-2"> 
        <%=f.label :username %>
      </div>
      <div class="col-sm-8"> 
      <%=f.text_field :username, class: "form-control" %>
      </div>
    </div>  

    <div class="form-group">
      <div class="control-label col-sm-2"> 
        <%=f.label :email%>
      </div>  
      <div class="col-sm-8"> 
        <%=f.text_field :email%>
      </div>
    </div> 

    <div class="form-group">
      <div class="control-label col-sm-2"> 
        <%=f.label :password %>
      </div>
      <div class="col-sm-8"> 
        <%=f.password_field :password %>
      </div>
    </div>  
   
    <div class="form-group">
      <div class="control-label col-sm-2"> 
        <%=f.label :password_confirmation%>
      </div> 
      <div class="col-sm-8">       
        <%=f.password_field :password_confirmation%>
      </div>
    </div> 

    <div class="form-group">
      <div class="col-sm-10" align="center"> 
        <%= f.submit class: "btn btn-primary"%>
      </div>
    </div>
  <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      <%= link_to "Cancel signup", root_path%>
    </div>
  </div>
</div>

